{
  "extends": ["eslint"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "class-methods-use-this": 0,
    "require-jsdoc": ["error", { "require": { "FunctionDeclaration": false } }],
    "no-underscore-dangle": ["error", { "allow": ["__synse_audio_context__"] } ],
    "func-style": ["error", "declaration", { "allowArrowFunctions": true }],
    "node/no-unsupported-features/es-syntax": "off"
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
